taggable:
  in TaggedModel:
    from:
      def tags_from_keywords
        if self.class.column_names.include?('keywords') && keys = read_attribute(:keywords)
          self.attached_tags = Tag.from_list(keys)
        end
      end
    to:
      def tags_from_keywords
        if self.class.column_names.include?('keywords') && keys = read_attribute(:keywords)
          self.attached_tags = Tag.from_list(keys) || []
        end
      end