= render :partial => 'flasher'

%div.apologetic
  %p.haserror
    = t('reader_extension.page_permission_denied')

    - if current_reader
      = t('reader_extension.if_mistake_see_admin')

      - content_for :title do
        = t('reader_extension.sorry_access_denied')
      
    - else
      = t('reader_extension.please_log_in') + '.'

      - content_for :title do
        = t('reader_extension.please_log_in')

  - unless current_reader
    = render :partial => 'reader_sessions/login_form'

- content_for :breadcrumbs do
  = link_to t('reader_extension.home').titlecase, '/'
  &gt;
  = t('reader_extension.access_denied')


